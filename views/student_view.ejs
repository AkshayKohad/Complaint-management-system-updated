<%layout("layouts/boilerplate")%>
<h3>Hello, You can submit your complaint here</h3>
<form class="row g-3" action="/student/complaints/<%=user%>" method="POST" data-toggle="validator">
    <div class="col-md-12">
      <label for="inputEmail4" class="form-label">Type of Complaint</label>
      <input type="text" class="form-control" id="inputEmail4" name="toc" required>
    </div>
    <div class="col-md-12">
      <label for="inputPassword4" class="form-label">Complaint Details</label>
      <input type="text" class="form-control" id="inputPassword4" name="cd" required>
    </div>
   
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
<br><br>
  <h1>My Complaints Submitted Records</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Sr.no.</th>
        <th scope="col">Type_of_complaint</th>
        <th scope="col">Complaint Details</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
        <%for(let i=0;i<answer1.length;i++){%>
            <tr>
              <th scope="row"><%=i+1%></th>
              <td><%=answer1[i].Type_of_Complaint%></td>
              <td><%=answer1[i].Complaint_Details%></td>
              <td><%=answer1[i].status%></td>
            </tr>
           
            <% } %>
     
    </tbody>
  </table>
  

  